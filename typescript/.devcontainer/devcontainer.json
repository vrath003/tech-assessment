{
    "name": "TypeScript Development Environment",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.vscode-typescript-next",
                "ms-vscode.vscode-node-extension-pack",
                "ms-vscode.vscode-json"
            ]
        }
    },
    "postCreateCommand": "node --version && npm --version && tsc --version",
    "remoteUser": "node"
}